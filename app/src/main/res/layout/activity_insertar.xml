<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".InsertarActivity" android:background="@color/purple_200">
    <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="377dp"
            android:layout_height="567dp"
            android:orientation="horizontal"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="23dp" android:layout_marginEnd="11dp" app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
                android:layout_width="111dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"/>

            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="42dp" app:srcCompat="@drawable/bag" android:id="@+id/imageView4"/>
            <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="37dp"
                    android:text=" Full Name"
                    android:textAlignment="inherit"/>

            <TextView
                    android:id="@+id/textView9"
                    android:layout_width="118dp"
                    android:layout_height="202dp"
                    android:text="Current Address*"
                    android:textAlignment="inherit"/>

            <TextView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Email Address*"
                    android:textAlignment="center"/>

            <TextView
                    android:id="@+id/textView11"
                    android:layout_width="match_parent"
                    android:layout_height="51dp"
                    android:text="Phone Number*"
                    android:textAlignment="center"/>

            <TextView
                    android:id="@+id/textView12"
                    android:layout_width="match_parent"
                    android:layout_height="39dp"
                    android:text="Applying for position*"
                    android:textAlignment="center"/>

            <TextView
                    android:id="@+id/textView13"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Start date"
                    android:textAlignment="center"/>

        </LinearLayout>

        <LinearLayout
                android:id="@+id/ll_main_layout"
                android:layout_width="258dp"
                android:layout_height="match_parent"
                android:background="#00F5F3F8"
                android:gravity="center"
                android:orientation="vertical"

                android:padding="25dp">

            <TextView
                    android:id="@+id/text_gallery"
                    android:layout_width="205dp"
                    android:layout_height="16dp"
                    android:padding="5dp"
                    android:textAlignment="center"
                    android:textColor="#121111"
                    android:textSize="20sp"/>

            <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Job Application"
                    android:textAlignment="center"
                    android:textColor="#040303"
                    android:textSize="20sp"/>

            <TextView
                    android:id="@+id/textView6"
                    android:layout_width="196dp"
                    android:layout_height="wrap_content"
                    android:text=" Please complete the form below to apply for a position with us"
                    android:textSize="12sp"/>

            <LinearLayout
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <EditText
                        android:id="@+id/name"
                        android:layout_width="97dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="First Name"
                        android:inputType="textPersonName"
                        android:textAlignment="inherit"
                        android:textColor="#000000"/>

                <EditText
                        android:id="@+id/lastName"
                        android:layout_width="95dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="Last Name"
                        android:inputType="textPersonName"
                        android:textAlignment="inherit"/>
            </LinearLayout>

            <EditText
                    android:id="@+id/streetAd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Street Address"
                    android:inputType="textPersonName"/>

            <EditText
                    android:id="@+id/streetAd2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Street Address Line2"
                    android:inputType="textPersonName"/>

            <LinearLayout
                    android:layout_width="211dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <EditText
                        android:id="@+id/city"
                        android:layout_width="69dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint="City"
                        android:inputType="textShortMessage"/>

                <EditText
                        android:id="@+id/state"
                        android:layout_width="137dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint="State/province"
                        android:inputType="textPersonName"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="211dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <EditText
                        android:id="@+id/zipCode"
                        android:layout_width="108dp"
                        android:layout_height="59dp"
                        android:ems="10"
                        android:hint="Postal/ZIP code"
                        android:inputType="number"/>
                <EditText
                        android:id="@+id/country"
                        android:layout_width="86dp"
                        android:layout_height="59dp"
                        android:ems="10"
                        android:hint="Country"
                        android:inputType="textPersonName" android:layout_weight="1"/>

            </LinearLayout>

            <EditText
                    android:id="@+id/email"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="email"
                    android:inputType="textEmailAddress"/>

            <LinearLayout
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <EditText
                        android:id="@+id/areaCode"
                        android:layout_width="98dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="Area code"
                        android:inputType="number"/>

                <EditText
                        android:id="@+id/phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint="Phone Number"
                        android:inputType="number"/>
            </LinearLayout>

            <EditText
                    android:id="@+id/position"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="position"
                    android:inputType="textEmailAddress" android:layout_weight="1"/>
            <LinearLayout
                    android:layout_width="206dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <EditText
                        android:id="@+id/month"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint="month"
                        android:inputType="date"/>

                <EditText
                        android:id="@+id/day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint="day"
                        android:inputType="date"/>

                <EditText
                        android:id="@+id/year"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint="year"
                        android:inputType="date"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="190dp"
                    android:layout_height="33dp"
                    android:orientation="horizontal">

                <Button
                        android:id="@+id/button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="APPLY"
                        android:textSize="12sp"
                        app:backgroundTint="@color/purple_500"/>


            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>