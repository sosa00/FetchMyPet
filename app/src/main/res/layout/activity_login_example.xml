<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".LoginExample">
    <LinearLayout
            android:id="@+id/ll_main_layout"
            android:layout_width="414dp"
            android:layout_height="657dp"
            android:gravity="center"
            android:padding="25dp"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
        <ImageView
                android:layout_width="162dp"
                android:layout_height="118dp" app:srcCompat="@drawable/doglogo"
                android:id="@+id/imageView2" android:background="#00000000"/>
        <TextView
                android:text="Fetch my Pet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView" android:textAlignment="center"
                android:textColor="#000000" tools:text="Fetch my Pet" android:textSize="34sp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp" android:fontFamily="@font/baloo"/>
        <EditText
                android:id="@+id/et_username"
                android:hint="E-mail"
                android:textColor="#FF7272"
                android:textColorHint="#FF7272"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:textColorHighlight="#A13838"/>
        <EditText
                android:id="@+id/et_password"
                android:hint="Contraseña"
                android:textColor="#FF7272"
                android:textColorHint="#FF7272"
                android:textAlignment="center"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="25dp"
                android:orientation="horizontal">
            <Button
                    android:id="@+id/btn_submit"
                    android:text="Iniciar Sesión"
                    android:textAllCaps="false"
                    android:layout_width="183dp"
                    android:layout_height="wrap_content" android:layout_marginLeft="10dp" app:backgroundTint="#FF7272"/>
        </LinearLayout>
        <TextView
                android:text="No tienes cuenta?"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView2" android:textAlignment="center"
                android:textColor="#000000" android:textSize="16sp"/>
        <TextView
                android:text="Regístrate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/idReg" android:layout_marginLeft="110dp"
                android:layout_marginRight="110dp" android:textAlignment="center" android:textColor="#FF7272"
                android:textAllCaps="false" android:textStyle="bold" android:textSize="16sp"/>
    </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="426dp"
            android:layout_height="142dp"
            android:background="#FF7272"
            app:layout_constraintTop_toBottomOf="@+id/ll_main_layout" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="-50dp">

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>