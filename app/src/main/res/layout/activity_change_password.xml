<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".change_password" android:background="@drawable/wallp">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="395dp"
            android:layout_height="142dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/constraintLayout" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="136dp" android:layout_marginBottom="7dp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout">
        <ImageView
                android:layout_width="162dp"
                android:layout_height="118dp" app:srcCompat="@android:drawable/sym_def_app_icon"
                android:id="@+id/imageView3"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="12dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="116dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="12dp" android:layout_marginEnd="116dp"
                app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="418dp"
            android:layout_height="339dp"
            android:id="@+id/linearLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="107dp">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="459dp">
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="71dp" android:id="@+id/idUser" android:textSize="20sp"
                    android:hint="Username" android:textAlignment="center" android:layout_marginLeft="70dp"
                    android:layout_marginRight="70dp" android:textColorHint="#52afaa" android:textColor="#6bfff7"
                    android:layout_marginTop="20dp"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="73dp"
                    android:inputType="textPassword"
                    android:ems="10"
                    android:id="@+id/idPass" android:hint="Last password" android:textAlignment="center"
                    android:textSize="20sp" android:layout_marginLeft="70dp" android:layout_marginRight="70dp"
                    android:layout_marginBottom="10dp" android:textColorHint="#52afaa" android:textColor="#6bfff7"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="73dp"
                    android:inputType="textPassword"
                    android:ems="10"
                    android:id="@+id/idPass2" android:hint="New Password" android:textAlignment="center"
                    android:textSize="20sp" android:layout_marginLeft="70dp" android:layout_marginRight="70dp"
                    android:layout_marginBottom="10dp" android:textColorHint="#52afaa" android:textColor="#6bfff7"/>
            <ImageView
                    android:layout_width="153dp"
                    android:layout_height="53dp" android:id="@+id/butRegi" android:layout_marginLeft="130dp"
                    android:layout_marginRight="110dp"
                    android:background="#7B08C3" app:srcCompat="@android:drawable/checkbox_on_background"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>